<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uk.ac.lincoln.students.yat13389566.myclimate.Weather"
    android:background="#3C9BFF">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listWeather"
        android:choiceMode="none"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weather Information"
        android:id="@+id/weatherInfo"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignEnd="@+id/listWeather"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@mipmap/cloud"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/weatherInfo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@mipmap/earth"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/listWeather"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:layout_marginTop="16dp"
        android:src="@mipmap/therm1"
        android:layout_below="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:src="@mipmap/drop2"
        android:layout_below="@+id/imageView20"
        android:layout_alignStart="@+id/imageView20"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView20"
        android:src="@mipmap/clouds1"
        android:layout_below="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_marginTop="23dp"
        android:src="@mipmap/wind"
        android:layout_below="@+id/imageView13"
        android:layout_alignStart="@+id/imageView13" />

</RelativeLayout>


